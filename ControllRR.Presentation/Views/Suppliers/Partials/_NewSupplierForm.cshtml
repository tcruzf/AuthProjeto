<!-- _NewSupplierForm.cshtml -->
@model ControllRR.Application.Dto.SupplierDto;

<form asp-controller="Suppliers" asp-action="CreateNewSupplier" method="post">
    <div class="row">
     <div class="form-group col-md-2">
    <label asp-for="Name"></label>
    <input asp-for="Name" class="form-control input-sm" />
    <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
    <label asp-for="CNPJ"></label> 
    <input asp-for="CNPJ" class="form-control input-sm cnpj-mask" />
    <span asp-validation-for="CNPJ" class="text-danger"></span>
    </div> 
    <div class="form-group col-md-4">
    <label asp-for="ContactEmail"></label>
    <input asp-for="ContactEmail" class="form-control input-sm" />
    <span asp-validation-for="ContactEmail" class="text-danger"></span>
    </div> 
    <div class="col">
    <label asp-for="PhoneNumber"></label>
    <input asp-for="PhoneNumber" class="form-control input-sm" />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div> 
    <div class="form-group col-md-2">
    <label asp-for="Address"></label>
    <input asp-for="Address" class="form-control input-sm" />
    <span asp-validation-for="Address" class="text-danger"></span>
    </div> 
   
    </div>
    <div class="mt-4">
    <button type="submit" class="btn btn-success">Salvar</button>
    </div>
</form>